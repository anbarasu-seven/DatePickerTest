<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <DatePicker
        android:id="@+id/date_pickerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popupCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar popup"
        android:textAllCaps="false"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/popupSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Spinner popup"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/popupCal" />

    <Button
        android:id="@+id/onlyCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textAllCaps="false"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/popupCal"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/onlySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Spinner"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/popupCal"
        app:layout_constraintStart_toEndOf="@id/onlyCalendar" />

    <Button
        android:id="@+id/both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Both"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/popupCal"
        app:layout_constraintStart_toEndOf="@id/onlySpinner" />




</androidx.constraintlayout.widget.ConstraintLayout>